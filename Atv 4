class Jogador {
    private String nome;
    private int pontuacao;
    private int nivel;
    
    public Jogador(String nome) {
        this.nome = nome;
        this.pontuacao = 0;
        this.nivel = 1;
    }
    
    public void aumentarPontuacao(int pontos) {
        pontuacao += pontos;
    }
    
    public void subirNivel() {
        nivel++;
    }
    
    public void exibirInfo() {
        System.out.println("Nome: " + nome + ", Pontuação: " + pontuacao + ", Nível: " + nivel);
    }
}

